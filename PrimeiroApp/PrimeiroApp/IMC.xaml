<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrimeiroApp.IMC">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Calculadora de IMC" FontSize="Title" HorizontalOptions="CenterAndExpand" />
            <Label Text="Nome" FontSize="Title"/>
            <Entry x:Name="nomeImc" Keyboard="Text" Placeholder="Digite o seu nome: "/>
            <Label Text="Idade" FontSize="Title"/>
            <Entry x:Name="idadeImc" Keyboard="Numeric" Placeholder="Digite a sua idade: "/>
            <Label Text="Peso em Kg" FontSize="Title"/>
            <Entry x:Name="pesoImc" Keyboard="Numeric" Placeholder="Digite seu peso em Kg: " />
            <Label Text="Altura em metros" FontSize="Title" />
            <Entry x:Name="alturaImc" Keyboard="Numeric" Placeholder="Digite sua altura em metros: " />

            <Button x:Name="btnCalcularImc" Text="Calcular o seu IMC" FontSize="Title" BackgroundColor="Aqua" BorderColor="black" BorderWidth="1"/>
            <Label x:Name="lblImc" FontSize="Title"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>