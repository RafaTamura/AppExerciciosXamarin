<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrimeiroApp.Menu">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Exercícios Xamarin"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                   FontSize="Large"/>
            <Button x:Name="btnEmail" Text="Criar Email" Clicked="BtnEmail_Clicked" VerticalOptions="FillAndExpand" FontSize="Large" BorderColor="black" BorderWidth="1" BackgroundColor="Purple" TextColor="White"/>
            <Button x:Name="btnImc" Text="Calcular IMC" Clicked="BtnImc_Clicked" VerticalOptions="FillAndExpand" FontSize="Large" BorderColor="black" BorderWidth="1" BackgroundColor="Purple" TextColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>