<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrimeiroApp.Email">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Criando Email!" FontSize="Title" HorizontalOptions="Center"/>
            <Entry x:Name="nomeEmail"  Keyboard="Text" Placeholder=" Digite o seu nome completo"/>
            <Button x:Name="btnGerarEmail"  Text="Criar Email" FontSize="Title" BackgroundColor="Cyan" BorderColor="black" BorderWidth="1"/>
            <Label x:Name="lbEmail" FontSize="Large" HorizontalTextAlignment="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>